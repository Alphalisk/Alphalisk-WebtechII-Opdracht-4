{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-sm p-5 my-5 border">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    <b>Let op!</b><br> Je bent al ingelogd met het account: {{ app.user.userIdentifier }}<br>
                    Wilt u misschien uitloggen? <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Hier kan je inloggen:</h1>
            <div class="container-fluid">
                <label for="username"><b>Email</b></label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                <br>
                <label for="password"><b>Password</b></label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                <br>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Remember me</label>
                    </div>
                #}

                <tr>
                    <td><button type="submit" class="btn btn-primary">Registreer</button></td>
                    <td><button type="reset" class="btn btn-danger">Reset formulier</button></td>
                </tr>
            </div>
        </form>
    </div>
{% endblock %}
